# ==============================================
# BARTOO MONOREPO ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and customize your settings

# ==============================================
# API CONFIGURATION
# ==============================================
API_URL=http://localhost:8000/api

# ==============================================
# AUTHENTICATION & SOCIAL LOGIN
# ==============================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_SECRET_KEY=your_facebook_secret_key
FACEBOOK_AUTH_REDIRECT_URL=your_supabase_auth_callback_url

# ==============================================
# DATABASE & BACKEND SERVICES
# ==============================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# ==============================================
# GOOGLE SERVICES
# ==============================================
MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# MAPBOX CONFIGURATION
# ==============================================
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Dark theme map style
MAPBOX_DARK_STYLE_ID=your_dark_style_id
MAPBOX_DARK_URL=your_dark_style_url

# Light theme map style
MAPBOX_LIGHT_STYLE_ID=your_light_style_id
MAPBOX_LIGHT_URL=your_light_style_url

# ==============================================
# NAVIGATION ROUTES
# ==============================================
HOME_ROUTE=/home
INTRODUCTION_ROUTE=/intro
ARTIST_HOME_ROUTE=/artist-home
VERIFY_PHONE_ROUTE=/verify-phone

# ==============================================
# FLUTTER CONFIGURATION
# ==============================================
FLUTTER_WEB_USE_SKIA=true
